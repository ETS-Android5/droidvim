    <PreferenceScreen
        android:title="@string/title_external_app_preference">

        <ListPreference
            android:key="external_app_action_mode"
            android:defaultValue="@string/pref_external_app_action_mode_default"
            android:title="@string/external_app_activity"
            android:entries="@array/entries_app_filepicker_preference"
            android:entryValues="@array/entryvalues_app_filepicker_preference"
            android:dialogTitle="@string/title_external_app_preference"/>

        <ListPreference
            android:key="external_app_package_name"
            android:defaultValue="@string/pref_external_app_id_default"
            android:title="@string/external_app"
            android:entries="@array/entries_preference"
            android:entryValues="@array/entries_preference"
            android:dialogTitle="@string/title_external_app_preference"/>

    </PreferenceScreen>

    <ListPreference
        android:key="cloud_dropbox_filepicker"
        android:defaultValue="@string/pref_cloud_dropbox_filepicker_default"
        android:title="@string/title_cloud_dropbox_preference"
        android:entries="@array/entries_app_filepicker_preference"
        android:entryValues="@array/entryvalues_app_filepicker_preference"
        android:dialogTitle="@string/title_cloud_dropbox_preference"/>

    <ListPreference
        android:key="cloud_googledrive_filepicker"
        android:defaultValue="@string/pref_cloud_googledrive_filepicker_default"
        android:title="@string/title_cloud_googledrive_preference"
        android:entries="@array/entries_app_filepicker_preference"
        android:entryValues="@array/entryvalues_app_filepicker_preference"
        android:dialogTitle="@string/title_cloud_googledrive_preference"/>

    <ListPreference
        android:key="cloud_onedrive_filepicker"
        android:defaultValue="@string/pref_cloud_onedrive_filepicker_default"
        android:title="@string/title_cloud_onedrive_preference"
        android:entries="@array/entries_app_filepicker_preference"
        android:entryValues="@array/entryvalues_app_filepicker_preference"
        android:dialogTitle="@string/title_cloud_onedrive_preference"/>

    <ListPreference
        android:key="html_viewer_mode"
        android:defaultValue="@string/pref_html_viewer_mode_default"
        android:title="@string/title_html_viewer_mode_preference"
        android:summary="@string/summary_html_viewer_mode"
        android:entries="@array/entries_html_viewer_mode_preference"
        android:entryValues="@array/entryvalues_html_viewer_mode_preference"/>

    <Preference
        android:key="mru_command"
        android:title="@string/title_mrucommand_preference"
        android:summary="@string/summary_mrucommand_preference"/>

</PreferenceScreen>
